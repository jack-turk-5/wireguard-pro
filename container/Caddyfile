:51819 {
    bind fd/3 {
        protocols h1
    }
    encode gzip

    handle /serverinfo {
        reverse_proxy :51818
    }

    handle /api* {
        reverse_proxy :51818
    }

    handle {
        root * /usr/share/caddy/html
        try_files {path} /index.html
        file_server
    }
}